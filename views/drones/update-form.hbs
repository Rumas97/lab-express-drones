<h2>Update the drone</h2>


<form action="/drones/{{data._id}}/edit" method="POST">

  <label for ='name'>Name</label>
  <input type="text" name='name' value ="{{data.name}}">

  <br>

  <label for="propellers">Number of propellers</label>
  <input type="number" name='propellers' value = "{{data.propellers}}">

  <br>

  <label for="maxSpeed">Max Speed</label>
  <input type="number" name='maxSpeed' value = "{{data.maxSpeed}}">

  <br>


  <button type="submit">Update</button>
</form>
